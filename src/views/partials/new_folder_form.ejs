<div id="newFolderFormOverlay" class="fixed inset-0 bg-black/50 items-center justify-center hidden opacity-0 transition-opacity duration-200">  
    <form
        id="newFolderForm"
        action="storage/folder/create"
        method="POST"            
        class="flex w-100 flex-col rounded-xs border p-4 bg-gray-800 shadow-xl"
    >
        <div class="flex items-center justify-between mb-6">                  
            <h2 class="text-xl font-bold text-white">New Folder</h2>
            <button 
                id="closeNewFolderFormButton" 
                type="button"
                aria-label="Close" 
                class="cursor-pointer p-1 inline-flex items-center justify-center text-gray-400 
                        hover:text-white"
            >
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true" focusable="false">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>            
        <input                
            type="text"
            name="newFolderName"
            id="newFolderName"
            placeholder="Folder name"
            autocomplete="off"                
            aria-label="Create new folder"
            class="w-full px-4 py-2 mb-4 rounded-xs bg-gray-700 text-white placeholder-gray-400 
                    focus:outline-none 
                    focus:ring-1 
                    focus:ring-blue-500"
        />           
        <button class="self-end py-1 px-4 rounded-xs text-white shadow-lg bg-cyan-700 hover:bg-cyan-800 transition">
            Create
        </button>            
    </form>  
</div>