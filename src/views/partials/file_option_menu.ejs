<ul 
    data-id="<%= fileId %>"
    data-type="file"
    class="hidden option-menu absolute top-[110%] right-0 p-2 border border-gray-900 bg-gray-800 z-10"
>   
  <li>
        <button
            data-id="<%= fileId %>" 
            class="open-rename-folder-form-button cursor-pointer w-full px-8 py-2 text-white
                        hover:bg-gray-700"                
        >
            details
        </button>
    </li>
    <li>
        <button
            data-id="<%= fileId %>" 
            class="open-rename-folder-form-button cursor-pointer w-full px-8 py-2 text-white
