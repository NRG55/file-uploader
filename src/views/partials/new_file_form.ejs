<div id="newFileFormOverlay" class="fixed inset-0 bg-black/50 items-center justify-center hidden opacity-0 transition-opacity duration-200">  
    <form
        id="newFileForm"
        action="/storage/<%= folder.id %>/upload-file"
        method="POST"
        enctype="multipart/form-data"
        class="flex w-100 flex-col rounded-xs border p-4 bg-gray-800 shadow-xl"
    >
        <div class="flex items-center justify-between mb-6">                  
            <h2 class="text-xl font-bold text-white">New File</h2>
            <button 
                id="closeNewFileFormButton" 
                type="button"
                aria-label="Close" 
                class="cursor-pointer p-1 inline-flex items-center justify-center text-gray-400 
                        hover:text-white"
            >
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true" focusable="false">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>            
        <input                
            type="file"
            name="uploadedFile"
            id="uploadedFile"
            accept="*"
            aria-label="Upload File"
            class="cursor-pointer w-3/4 rounded-xs text-gray-400 mb-3
                    file:cursor-pointer file:text-white file:bg-gray-600 file:rounded-xs file:px-4 file:py-1 file:mr-4 file:transition
                    hover:file:bg-gray-700"
        />
        <small class="mb-1 text-gray-400">Max file size: 100Mb</small>
        <small class="mb-3 text-gray-400">File types: TXT, PDF, JPG, PNG, WEBP, SVG, DOC, DOCX, XLS, XLSX</small>
        <button class="self-end py-1 px-4 rounded-xs text-white shadow-lg bg-cyan-700 hover:bg-cyan-800 transition">
            Upload
        </button>            
    </form>  
</div>