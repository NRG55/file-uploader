<div 
    id="fileDetailsModal"     
    class="fixed inset-0 bg-black/50 items-center justify-center hidden opacity-0 transition-opacity duration-200"
>  
    <form        
        action="/storage/<%= folder.id %>"
        method="GET"            
        class="flex w-100 flex-col rounded-xs border p-4 bg-gray-800 shadow-xl"
    >
        <div class="flex items-center justify-between mb-6">                  
            <h2 class="text-xl font-bold text-white">File Information</h2>
            <button                 
                type="button"
                aria-label="Close modal" 
                class="close-file-details-modal-button cursor-pointer p-1 inline-flex items-center justify-center text-gray-400 
                        hover:text-white"
            >
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true" focusable="false">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div class="mb-8">
            <p class="name text-gray-300"></p>
            <p class="type text-gray-300"></p>
            <p class="size text-gray-300"></p>
            <p class="created text-gray-300"></p>
        </div>
        
        <div class="flex justify-end gap-4">           
            <button 
                type="button" 
                class="close-file-details-modal-button py-1 px-4 rounded-xs text-white shadow-lg border border-gray-400 transition
                     hover:border-gray-500"
            >
                Close
            </button>                      
            <button
                id="downloadFileButton" 
                class="py-1 px-4 rounded-xs text-white shadow-lg border border-cyan-700 bg-cyan-700 transition
                     hover:bg-cyan-800 "
             >
                Download
            </button>
        </div>
    </form>  
</div>