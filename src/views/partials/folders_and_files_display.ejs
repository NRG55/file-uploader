<div id="foldersAndFilesContainer" class="flex-1 bg-gray-900 p-4 border-t border-gray-700">    
    <% if (locals.folder) { 
        folder.childFolders.forEach((folder) => { %>
            <div class="relative flex items-center justify-between mb-2">           
                <a 
                    href="/storage/<%= folder.id %>" 
                    class="folder-link relative cursor-pointer flex gap-4 items-center w-full h-10 text-white pl-4 border border-transparent  
                          hover:bg-gray-800"
                    id="folderLink-<%= folder.id %>"
                    data-folder-link-id="<%= folder.id %>"
                >
                    <div class="">
                        <img src="/images/folder.svg" class="w-8"/>
                    </div>                
                    <div class="">
                        <%= folder.name %>
                    </div>                                
                </a>
                <%- include("./rename_folder_or_file_form", { type: 'folder', folder: folder }) %>
                <div class="relative flex">
                    <button 
                        class="option-menu-button hover:bg-gray-800" 
                        data-type="folder" 
                        data-id="<%= folder.id %>"
                    >
                        <img src="/images/options.svg" class="cursor-pointer p-2 w-11"/>                        
                    </button>  
                    <%- include("./folder_option_menu", { folderId: folder.id, parentFolderId }) %>
                </div>                                            
            </div>             
    <% })} %>
    <% if (locals.folder) { 
        folder.files.forEach((file) => { %>
            <div class="flex items-center justify-between">           
                <a 
                    href="/storage/<%= folder.id %>" 
                    class="relative cursor-pointer flex gap-4 items-center w-full h-10 mb-2 text-white pl-4
                          hover:bg-gray-800"
                >
                    <div class="">
                        <img src="/images/file.svg" class="w-5"/>
                    </div>                
                    <div class="">
                        <%= file.name %>
                    </div>                                
                </a>
                <%- include("./rename_folder_or_file_form", { type: 'file', folder: folder, file: file }) %>
                <div class="relative flex">
                    <button 
                        class="option-menu-button hover:bg-gray-800" 
                        data-id="<%= file.id %>"
                        data-type="file"
                    >
                        <img src="/images/options.svg" class="cursor-pointer p-2 w-11"/>                        
                    </button>  
                    <%- include("./file_option_menu", { fileId: file.id, parentFolderId }) %>
                </div>  
            </div>  
    <% })} %>     
</div>